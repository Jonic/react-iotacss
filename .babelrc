{
  "plugins": [
    "transform-object-rest-spread",
    "transform-class-properties"
  ],

  "env": {
    "test": {
      "presets": [
        "react",
        ["env", {
          "targets": {
            "node": "current"
          }
        }]
      ],
      "plugins": [
        ["transform-es2015-modules-commonjs", { "loose": true }]
      ]
    },

    "cjs": {
      "presets": [
        "react",
        ["env", {
          "targets": {
            "node": "6"
          }
        }]
      ],
      "plugins": [
        ["transform-es2015-modules-commonjs", { "loose": true }]
      ]
    },

    "esm": {
      "presets": [
        "react",
        ["env", {
          "targets": {
            "node": "6"
          },
          "modules": false
        }]
      ]
    },

    "umd": {
      "presets": [
        "react",
        ["env", {
          "modules": false
        }]
      ],
      "plugins": [
        "transform-object-rest-spread",
        "transform-class-properties"
      ]
    }
  }
}
